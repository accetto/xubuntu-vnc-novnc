### hooks/env

SOURCE_BRANCH=${SOURCE_BRANCH:-$1}
DOCKER_TAG=${DOCKER_TAG:-$1}
if [[ -n "$1" ]] ; then shift ; fi

DOCKERFILE_PATH=${DOCKERFILE_PATH:-./Dockerfile.chrome}
DOCKER_REPO=${DOCKER_REPO:-accetto/xubuntu-vnc-novnc-chrome}

BASETAG=""
TODAY=$(date +%Y-%m-%d)

### Warning! The values are initialized from the related environment variables.
VERSION_STICKER_LATEST="${G2_STICKER_BASE:-ubuntu18.04.6}-${G2_STICKER_CHROME:-chrome}"

VERSION_STICKER="${VERSION_STICKER_LATEST}"

case "${DOCKER_TAG}" in

    latest | dev )
        BASETAG="${DOCKER_TAG}"
        ;;

    *)
        BASETAG=""
        ;;
esac
